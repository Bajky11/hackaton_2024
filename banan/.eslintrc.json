{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": "error",
    "func-style": [
      "error",
      "expression"
    ]
  }
}